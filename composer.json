{
    "name": "devec/pdf-microservice",
    "description": "Rendering html to pdf per json call.",
    "keywords": [
        "microframework",
        "pdf"
    ],
    "homepage": "https://gitlab.com/devec/pdf-microservice",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Gerber",
            "email": "info@alexander-gerber.de",
            "homepage": "http://www.alexander-gerber.de/"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "dompdf/dompdf": "^0.8.5",
        "monolog/monolog": "^2.1",
        "php-di/php-di": "^6.2",
        "respect/validation": "^2.0",
        "slim/psr7": "^1.1",
        "slim/slim": "^4.5"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^0.8.0",
        "phpstan/extension-installer": "^1.0.4",
        "phpstan/phpstan": "^0.12.32",
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "phpstan": "./vendor/bin/phpstan analyse src tests app"
    }
}
